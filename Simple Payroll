<body>

<div class="container">
    <h2>Payroll Management System</h2>

    <!-- Input Fields -->
    <div>
        <input type="text" id="empName" placeholder="Employee Name">
        <input type="number" id="daysWorked" placeholder="Days Worked">
        <input type="number" id="dailyRate" placeholder="Daily Rate">
        <input type="number" id="deduction" placeholder="Deduction Amount">

        <button onclick="addEmployee()">Add Employee</button>
    </div>

    <!-- Payroll Table -->
    <table id="payrollTable">
        <thead>
            <tr>
                <th>No.</th>
                <th>Employee Name</th>
                <th>Days Worked</th>
                <th>Daily Rate</th>
                <th>Gross Pay</th>
                <th>Deduction</th>
                <th>Net Pay</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <!-- Delete Box -->
    <div class="deleteBox">
        <input type="number" id="deleteLine" placeholder="Line Number">
        <button onclick="deleteEmployee()">Delete</button>
    </div>
</div>

<script>
let payrollList = [];

function addEmployee() {
    let name = document.getElementById("empName").value;
    let days = parseInt(document.getElementById("daysWorked").value);
    let rate = parseFloat(document.getElementById("dailyRate").value);
    let deduct = parseFloat(document.getElementById("deduction").value);

    // Input validation
    if (!name || isNaN(days) || isNaN(rate) || isNaN(deduct)) {
        alert("Please fill out all fields correctly.");
        return;
    }

    let gross = days * rate;
    let net = gross - deduct;

    // Add to array
    payrollList.push({
        name: name,
        days: days,
        rate: rate,
        gross: gross,
        deduct: deduct,
        net: net
    });

    updateTable();
}

function updateTable() {
    let tbody = document.querySelector("#payrollTable tbody");
    tbody.innerHTML = "";

    // Refresh table
    payrollList.forEach((emp, index) => {
        let row = `
            <tr>
                <td>${index + 1}</td>
                <td>${emp.name}</td>
                <td>${emp.days}</td>
                <td>${emp.rate.toFixed(2)}</td>
                <td>${emp.gross.toFixed(2)}</td>
                <td>${emp.deduct.toFixed(2)}</td>
                <td>${emp.net.toFixed(2)}</td>
            </tr>
        `;
        tbody.innerHTML += row;
    });
}

function deleteEmployee() {
    let line = parseInt(document.getElementById("deleteLine").value);

    if (isNaN(line) || line < 1 || line > payrollList.length) {
        alert("Invalid line number.");
        return;
    }

    // Remove element
    payrollList.splice(line - 1, 1);

    updateTable();
}
</script>

</body>
