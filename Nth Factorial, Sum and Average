<body>

<div class="box">
    <h2>Loop Calculator</h2>

    <input type="number" id="num" placeholder="Enter an integer value">

    <button onclick="compute()">Compute</button>

    <div id="output"></div>
</div>

<script>
function compute() {
    let n = parseInt(document.getElementById("num").value);

    if (isNaN(n) || n < 0) {
        document.getElementById("output").innerHTML = "Please enter a valid positive integer.";
        return;
    }

    // 1. Factorial using While Loop
    let fact = 1;
    let i = 1;
    while (i <= n) {
        fact *= i;
        i++;
    }

    // 2. Sum using Do While Loop
    let sum = 0;
    let j = 1;
    if (n > 0) {
        do {
            sum += j;
            j++;
        } while (j <= n);
    }

    // 3. Average using For Loop
    let avg = 0;
    for (let k = 1; k <= n; k++) {
        avg += k;
    }
    avg = avg / n;

    // display results
    document.getElementById("output").innerHTML =
        "Factorial (" + n + "!) = " + fact.toLocaleString() + "<br>" +
        "Sum of first " + n + " numbers = " + sum + "<br>" +
        "Average of first " + n + " numbers = " + avg.toFixed(2);
}
</script>

